# Backend Environment Variables
# Copy this file to .env and adjust values for your environment

# =============================================================================
# PostgreSQL (NeonDB)
# =============================================================================
# Local development
DATABASE_URL=postgres://postgres:postgres@localhost:5433/helloworld

# Production (NeonDB) - Get this from Neon Console > Connection Details
# DATABASE_URL=postgres://user:password@ep-xxx-xxx-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# =============================================================================
# MongoDB (Messages storage)
# =============================================================================
# Local development
MONGODB_URL=mongodb://localhost:27017

# Production (MongoDB Atlas) - Get this from Atlas > Connect > Drivers
# MONGODB_URL=mongodb+srv://user:password@cluster.mongodb.net/?retryWrites=true&w=majority

# =============================================================================
# Authentication
# =============================================================================
# JWT Secret - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -base64 32
JWT_SECRET=super_secret_jwt_key_change_in_production

# =============================================================================
# Server
# =============================================================================
PORT=3001
RUST_LOG=info
